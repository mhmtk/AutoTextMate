<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/editText_name" >
        </EditText>

        <EditText
            android:id="@+id/editText_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/editText_description" />

        <EditText
            android:id="@+id/editText_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/editText_text"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:id="@+id/linearLayout_contactsOnly"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_contactsOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textView_contactsOnly_text" 
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/checkBox_contactsOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_replyTo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:gravity="center">

           	<TextView
                android:id="@+id/textView_replyTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textView_replyTo_text"
                android:layout_weight="1" />
            <RadioGroup
                android:id="@+id/radio_callsms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <RadioButton
                    android:id="@+id/radio_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_sms" />

                <RadioButton
                    android:id="@+id/radio_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/radio_call" />

                <RadioButton
                    android:id="@+id/radio_both"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_both" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</ScrollView>